/*
 * Instrucoes para compilar:
 * $gpt ex7.gpt -o ex7.gpt.x
 */

/* ---------------------------------------------------------------------- */
/* algoritmo */

algoritmo exemplo;

/* ---------------------------------------------------------------------- */
/* variáveis */

variáveis
    numero1 : real;
    numero2 : real;
    div : real;     
fim-variáveis

/* ---------------------------------------------------------------------- */
/* rotina principal */

início

    imprima("Escolha o primeiro número: ");
    numero1 := leia();

    imprima("Escolha o segundo número: ");
    numero2 := leia();
    enquanto numero2 = 0 faça
        imprima("O divisor não pode ser zero");
        imprima("Digite um número diferente de zero: ");
        numero2 := leia();
    fim-enquanto

    div := numero1 / numero2;
    imprima("A divisão desses números é: ", div);

fim

